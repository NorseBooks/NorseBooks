{
  "name": "norsebooks",
  "version": "2.0.0",
  "description": "The NorseBooks project seeks to provide Luther College students a place to buy and sell textbooks to each other.",
  "author": "Will Allen",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "cd app && npm install",
    "prebuild": "rimraf dist",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "nest build",
    "build:frontend": "cd app && npm run build && cd ..",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "document": "npx typedoc --options typedoc.json",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand --config ./jest.config.ts && npx jest-coverage-badges",
    "test:watch": "jest --watch --runInBand --config ./jest.config.ts",
    "test:cov": "jest --coverage --runInBand --config ./jest.config.ts && npx jest-coverage-badges",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "csv": "^5.5.0",
    "express-sslify": "^1.2.0",
    "jimp": "^0.16.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-sslify": "^1.2.2",
    "@types/jest": "^26.0.24",
    "@types/jimp": "^0.2.28",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
